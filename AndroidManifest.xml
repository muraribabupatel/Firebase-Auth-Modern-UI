<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mvmart">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/appstore"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/appstore"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.mvmart.MainActivity"
            android:exported="true" />
        <activity
            android:name="com.example.mvmart.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.mvmart.LogOutActivity" />
        <activity android:name="com.example.mvmart.VerifyOtpActivity" />
        <activity android:name="com.example.mvmart.ForgetPasswordActivity" />
        <activity android:name="com.example.mvmart.RegistrationActivity" />
        <activity android:name="com.example.mvmart.LoginActivity"></activity>
    </application>

</manifest>